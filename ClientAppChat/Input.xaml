<Window x:Class="ClientAppChat.Input"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientAppChat"
        mc:Ignorable="d"
        Title="Username" Height="130" Width="200">
    <StackPanel Margin="10">
        <TextBlock FontSize="13" FontWeight="Bold" Text="Enter your Username:" />
        <TextBox Name="InputTextBox" Margin="0,5,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Click="OkButton_Click" Margin="5"/>
            <Button Content="Cancel" Click="CancelButton_Click" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
